---
import ThesisList from "@/components/thesis/list.astro";
import { Alert, AlertDescription, AlertTitle } from "@/components/ui/alert";

import { CONFIG } from "@/lib/constants";

import MainLayout from "@/layouts/main.astro";
---

<MainLayout title={`Történelem - ${CONFIG.site.title}`}>
  <Alert className="mb-6">
    <AlertTitle>Figyelem</AlertTitle>
    <AlertDescription>
      A tételeket éppen átdolgozom a könnyebb megértés és a gyorsabb
      feldolgozhatóság érdekében, a tartalmuk hamarosan változni fog. Eddig a
      kvízek nem fognak működni.
    </AlertDescription>
  </Alert>
  <ThesisList type="tortenelem" />
</MainLayout>
